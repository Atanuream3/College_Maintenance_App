<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context="com.example.asmita.loginactivity.MainActivity">

    <TextView
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="175dp"
        android:textColor="#000000"

        android:text="Username" />

    <TextView
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_centerVertical="true"

        android:text="Password" />

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/password"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="42dp"

        android:background="#ff0099cc"

        android:onClick="getLogin"
        android:text="Login"
        android:textColor="#000000" />

    <Button
        android:id="@+id/buttonclear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/loginbtn"
        android:layout_alignBottom="@+id/loginbtn"
        android:layout_marginLeft="66dp"
        android:layout_marginStart="66dp"
        android:layout_toEndOf="@+id/loginbtn"
        android:layout_toRightOf="@+id/loginbtn"
        android:text="Clear"
        android:textColor="#000000"
        android:background="#ff0099cc"
        android:onClick="clearData"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/loginbtn"
        android:layout_toRightOf="@+id/loginbtn"

        android:ems="10"
        android:textColorHint="#000000"
        android:hint="Enter the username"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/loginbtn"
        android:layout_toRightOf="@+id/loginbtn"

        android:ems="10"
        android:textColorHint="#000000"
        android:hint="Enter the password"
        android:inputType="textPassword" />

    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Register Here"
        android:onClick="startRegister"
        android:layout_below="@+id/loginbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        app:srcCompat="@drawable/gandhiji" />



</RelativeLayout>
